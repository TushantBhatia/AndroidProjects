<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.tushant.toyname.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="479dp"
        android:layout_gravity="center"
        android:text="Date in which you bought a toy"
        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:text="view"
        android:layout_width="276dp"
        android:layout_height="271dp"
        android:id="@+id/button"
        style="@android:style/Widget.Button"
        android:layout_marginRight="153dp"
        android:layout_marginEnd="153dp"
        android:layout_marginTop="68dp"
        tools:text="@android:string/cancel"
        tools:padding="@android:dimen/notification_large_icon_height"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingEnd="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingStart="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@android:dimen/thumbnail_height"
        android:layout_marginLeft="@android:dimen/thumbnail_width"
        android:layout_marginStart="@android:dimen/thumbnail_width"
        android:layout_margin="23dp" />

</FrameLayout>
